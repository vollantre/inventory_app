extends layout

block content
  h1= title

  ul
    - categories.sort((a, b) => {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each category in categories
      li
        a(href=category.url) #{category.name}
    else
      li There are no categories